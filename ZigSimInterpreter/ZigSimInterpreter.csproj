<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>Voltaney.$(AssemblyName)</PackageId>
    <Authors>Voltaney</Authors>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Description>Parser library for data sent from ZigSim mobile application.</Description>
    <RepositoryUrl>https://github.com/voltaney/ZigSimInterpreter</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>ZigSim;Parser;JSON</PackageTags>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <Copyright>Copyright (c) Voltaney 2025</Copyright>
    <PackageReleaseNotes>https://github.com/voltaney/ZigSimInterpreter/releases/</PackageReleaseNotes>
    <PackageProjectUrl>https://github.com/voltaney/ZigSimInterpreter</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>